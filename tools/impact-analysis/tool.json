{
  "name": "impact-analysis",
  "version": "2.0.0",
  "description": "Analyze the impact of modifying a file - shows how many files depend on it",
  "type": "bash",
  "entry": "impact-analysis.sh",
  "author": "Arpit Nath",
  "keywords": ["dependencies", "impact", "refactoring", "risk"],
  "usage": {
    "command": "impact-analysis <file-path>",
    "args": {
      "file-path": "Path to the file to analyze"
    },
    "examples": [
      {
        "description": "Analyze impact of changing auth.ts",
        "command": "impact-analysis src/auth.ts"
      }
    ]
  },
  "requires": {
    "graph": "~/.claude/dep-graph.json"
  },
  "outputs": {
    "format": "text",
    "content": "Risk level (HIGH/MEDIUM/LOW) and list of dependent files"
  },
  "permissions": {
    "read": ["~/.claude/dep-graph.json"],
    "write": [],
    "network": false
  },
  "autoRun": {
    "enabled": true,
    "triggers": ["pre-edit", "pre-write"],
    "condition": "file-exists-in-graph"
  }
}
